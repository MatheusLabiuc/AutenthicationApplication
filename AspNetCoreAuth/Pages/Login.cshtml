@page
@model AspNetCoreAuth.Pages.LoginModel
@{
}


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Insira seu e-mail e sua senha para prosseguir</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Email">Email</label>
                    <input type="text"asp-for="Model.Email" class="form-control"/>
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Password">Senha</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input"/>
                    <label class="form-check-label" asp-for="Model.RememberMe">Remember me?</label>
                </div>
                <div mb-3>
                    <button id="login-submit" type="submit" class="btn btn-primary" asp>Login</button>

                </div>

            </form>
        </div>
    </div>
</div>
