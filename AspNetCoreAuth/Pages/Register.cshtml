@page
@model AspNetCoreAuth.Pages.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
       <div class="col-sm-12 col-md-12 col-lg-4">
           <h1>Cadastro</h1>
           <form method="post">
               <div asp-validation-summary="All" class="text-danger">
               </div>
               <div class="mb-3">
                   <label class="form-label" asp-for="RegModel.Email">Endereço de e-mail</label>
                   <input type="text" asp-for="RegModel.Email" class="form-control"/>
                   <span asp-validation-for="RegModel.Email" class="text-danger"></span>
               </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegModel.Password">Senha</label>
                    <input type="password" asp-for="RegModel.Password" class="form-control" />
                    <span asp-validation-for="RegModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegModel.ConfirmPassword">Confirme a senha</label>
                    <input type="password" asp-for="RegModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
           </form>
       </div>
    </div>
</div>
